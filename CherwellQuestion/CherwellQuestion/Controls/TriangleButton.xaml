<UserControl x:Class="Controls.CherwellQuestion.TriangleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CherwellQuestion"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50"
             x:Name="TButton">
    <UserControl.Resources>

    </UserControl.Resources>
    <Grid>
        <Polygon x:Name="Triangle" Stroke="White" StrokeThickness="1" MouseDown="Triangle_MouseDown">
            <Polygon.Fill>
                <SolidColorBrush Color="#5B9BD5" Opacity="1"/>
            </Polygon.Fill>
        </Polygon>
        <TextBlock x:Name="TriangleText" Foreground="White"  MouseDown="Triangle_MouseDown"/>
    </Grid>
</UserControl>
